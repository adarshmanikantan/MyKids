<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildHome"
    android:weightSum="1">
<LinearLayout
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="childHealthClick"
    android:background="@color/colorPrimary"
    android:transitionName="layoutTransition"
    android:layout_weight="0.5"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CHILD HEALTH"
        android:fontFamily="@font/chunkfive"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:textSize="30sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:onClick="childeduClick"
        android:layout_weight="0.5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CHILD EDUCATION"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>