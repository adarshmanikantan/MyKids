<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EducationActivity"
    android:theme="@style/Theme.Shrine">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="30dp"
    android:background="#FFBA00"
    android:elevation="40dp"
    android:gravity="center"
    android:onClick="tillfiveClick">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rhymes"
        android:fontFamily="@font/chunkfive"
        android:textSize="30sp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="#E71809"
        android:elevation="40dp"
        android:gravity="center"
        android:onClick="storyClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="#0B90FA"
        android:elevation="40dp"
        android:gravity="center"
        android:onClick="englishClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="#0B90FA"
        android:elevation="40dp"
        android:gravity="center"
        android:onClick="scienceClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="#0B90FA"
        android:elevation="40dp"
        android:gravity="center"
        android:onClick="mathsClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:background="#0B90FA"
        android:elevation="40dp"
        android:gravity="center"
        android:onClick="computerClick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:fontFamily="@font/chunkfive"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>